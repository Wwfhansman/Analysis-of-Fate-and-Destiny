.container {
  padding: 0;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.user-info {
  background: #fff;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar-wrapper {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.avatar-btn {
  padding: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
}

.avatar-btn::after {
  border: none;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.nickname {
  font-size: 32rpx;
  color: #333;
}

.menu-list {
  background: #fff;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
}

.arrow {
  font-size: 28rpx;
  color: #999;
}

.version-info {
  text-align: center;
  padding: 40rpx;
  font-size: 24rpx;
  color: #999;
} 