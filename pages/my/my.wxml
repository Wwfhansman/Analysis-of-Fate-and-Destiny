<!-- my.wxml -->
<view class="container">
  <view class="user-info">
    <view class="avatar-wrapper">
      <button class="avatar-btn" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
        <image class="avatar" src="{{avatarUrl}}" mode="aspectFill"></image>
      </button>
    </view>
    <view class="nickname">
      <text wx:if="{{!hasUserInfo}}">点击头像登录</text>
      <text wx:else>{{userInfo.nickName}}</text>
    </view>
  </view>

  <view class="menu-list">
    <view class="menu-item" bindtap="navigateToHistory">
      <text class="menu-text">历史记录</text>
      <text class="arrow">></text>
    </view>
    
    <view class="menu-item" bindtap="navigateToTheory">
      <text class="menu-text">中国传统命理分析原理</text>
      <text class="arrow">></text>
    </view>

    <view class="menu-item" bindtap="showContact">
      <text class="menu-text">联系客服</text>
      <text class="arrow">></text>
    </view>
  </view>

  <view class="version-info">
    <text>版本 1.0.0</text>
  </view>
</view>