/**index.wxss**/
page {
  height: 100%;
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.page-container {
  min-height: 100vh;
  padding-bottom: 30rpx;
  display: flex;
  flex-direction: column;
}

/* 头部样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.date-picker {
  display: flex;
  align-items: center;
}

.current-date {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.arrow-down {
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-top: 12rpx solid #666;
  margin-left: 10rpx;
}

.add-note {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #4CAF50, #2E7D32);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(46, 125, 50, 0.3);
}

.add-icon {
  color: #fff;
  font-size: 50rpx;
  font-weight: 300;
  line-height: 1;
}

/* 笔记列表样式 */
.notes-container {
  flex: 1;
  padding: 30rpx 40rpx;
}

.note-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.note-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.03);
}

.note-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.note-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.mood-indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.mood-indicator.happy {
  background-color: #4CAF50;
}

.mood-indicator.sad {
  background-color: #F44336;
}

.mood-indicator.thought {
  background-color: #2196F3;
}

.note-time {
  font-size: 24rpx;
  color: #999;
}

.note-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  word-break: break-all;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 50rpx;
}

.add-note-btn {
  width: 320rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #4CAF50, #2E7D32);
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  box-shadow: 0 4rpx 12rpx rgba(46, 125, 50, 0.3);
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(3px);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.modal-header-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 44rpx;
  color: #999;
  line-height: 1;
}

.mood-selector {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.mood-option {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.2s ease;
}

.mood-icon {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.mood-icon.happy {
  background-color: #4CAF50;
}

.mood-icon.sad {
  background-color: #F44336;
}

.mood-icon.thought {
  background-color: #2196F3;
}

.mood-option-first {
  margin-left: 0;
}

.mood-option-last {
  margin-right: 0;
}

.mood-option-selected {
  background-color: rgba(76, 175, 80, 0.1);
  border-color: #4CAF50;
  color: #4CAF50;
}

.form-item {
  margin-bottom: 30rpx;
}

.note-title-input {
  width: 100%;
  height: 88rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  background-color: #f9f9f9;
  box-sizing: border-box;
}

.note-content-input {
  width: 100%;
  min-height: 240rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
  background-color: #f9f9f9;
  line-height: 1.6;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.cancel-btn, .save-btn {
  width: 48%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 32rpx;
  transition: all 0.2s ease;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.save-btn {
  background: linear-gradient(135deg, #4CAF50, #2E7D32);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(46, 125, 50, 0.2);
}

.cancel-btn:active, .save-btn:active {
  transform: scale(0.98);
}
