/* result.wxss */
page {
  background-color: #f9f9f9;
  min-height: 100%;
}

.page-container {
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

.container {
  width: 100%;
  padding: 0;
  box-sizing: border-box;
}

.header {
  margin-bottom: 30rpx;
}

.title-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

.date {
  font-size: 26rpx;
  color: #999;
}

.birth-info {
  font-size: 28rpx;
  color: #666;
  background-color: rgba(106, 124, 183, 0.1);
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.result-container {
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 20rpx;
  margin: 20rpx auto;
}

.result-content {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.content-section {
  padding: 10rpx;
}

.content-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  white-space: pre-wrap;
}

.analysis-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
  white-space: pre-wrap;
  word-break: break-all;
  text-align: justify;
  padding: 0 10rpx;
}

.analysis-text text {
  display: block;
  margin-bottom: 20rpx;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  margin: 0 15rpx;
}

.btn:first-child {
  margin-left: 0;
}

.btn:last-child {
  margin-right: 0;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.share-btn {
  background: linear-gradient(135deg, #6e8efb, #4a6cf7);
  color: white;
}

.back-btn {
  background-color: #f5f5f5;
  color: #666;
}

.disclaimer {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
  padding: 20rpx 0;
}

/* 加载动画样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4a90e2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}