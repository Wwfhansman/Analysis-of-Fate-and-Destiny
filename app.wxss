/**app.wxss**/
page {
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Microsoft YaHei', Arial, sans-serif;
  color: #333;
  font-size: 28rpx;
  line-height: 1.5;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

/* 全局样式 */
.page-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 按钮基础样式 */
.btn {
  border-radius: 8rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  outline: none;
  padding: 0 30rpx;
  height: 90rpx;
  transition: opacity 0.3s ease;
}

/* 主要按钮样式 */
.btn-primary {
  background-color: #87CEEB;
  color: white;
}

.btn-primary:active {
  opacity: 0.8;
}

/* 次要按钮样式 */
.btn-secondary {
  background-color: rgba(135, 206, 235, 0.1);
  color: #87CEEB;
}

/* 卡片基础样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

/* 输入框基础样式 */
.input {
  background-color: #f9f9f9;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  box-sizing: border-box;
}

.input:focus {
  border-color: #4a6cf7;
}

/* 标签基础样式 */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.tag-primary {
  background-color: rgba(74, 108, 247, 0.1);
  color: #4a6cf7;
}

.tag-secondary {
  background-color: #f5f5f5;
  color: #666;
}

/* 列表项基础样式 */
.list-item {
  background-color: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 分割线样式 */
.divider {
  height: 2rpx;
  background-color: #f0f0f0;
  margin: 20rpx 0;
}

/* 文本样式 */
.text-primary {
  color: #4a6cf7;
}

.text-secondary {
  color: #666;
}

.text-small {
  font-size: 24rpx;
}

.text-large {
  font-size: 32rpx;
}
